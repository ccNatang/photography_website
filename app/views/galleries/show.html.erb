<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

  <%# Gallery Header %>
  <div class="mb-12">
    <h1 class="text-4xl font-bold text-gray-900"><%= @gallery.title %></h1>
    <p class="text-lg text-gray-600 mt-2"><%= @gallery.description %></p>
  </div>

  <% if @gallery.photos.any? %>
    <%# Responsive photo grid. %>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      
      <% @gallery.photos.each do |photo| %>
        <div classa="group">
          <%# photo "card". %>
          <div class="block rounded-lg overflow-hidden aspect-square bg-gray-100">
            <% if photo.image.attached? %>
              <%= image_tag photo.image.variant(resize_to_fill: [400, 400]), class: "w-full h-full object-cover" %>
            <% end %>
          </div>

          <%# Photo title below the image %>
          <h3 class="text-sm font-medium text-gray-700 mt-2"><%= photo.title %></h3>
        </div>
      <% end %>

    </div>
  <% else %>
    <p class="text-gray-500">There are no photos in this gallery yet.</p>
  <% end %>

  <%# Back link %>
  <div class="mt-12">
    <%= link_to "â† Back to all galleries", 
          galleries_path, 
          class: "text-blue-600 hover:text-blue-800 transition-colors" %>
  </div>

</div>