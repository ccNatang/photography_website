<div class="form-wrapper">
  <div class="form-card">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
      Add New Photo to "<%= @gallery.title %>"
    </h1>

    <%= form_with(model: [:admin, @gallery, @photo], multipart: true, local: true) do |form| %>

      <% if @photo.errors.any? %>
        <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg">
          <h2 class="font-bold"><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @photo.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :image, class: "form-label" %><br>
        <%= form.file_field :image, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
      </div>

      <div class="mb-4">
        <%= form.label :title, class: "form-label" %><br>
        <%= form.text_field :title, class: "form-input" %>
      </div>
      
      <div class="mb-4">
        <%= form.label :description, class: "form-label" %><br>
        <%= form.text_area :description, class: "form-input" %>
      </div>

      <div class="mt-6">
        <%= form.submit "Upload Photo", class: "form-submit" %>
      </div>
    <% end %>

    <hr class="my-6">
    <%= link_to "â† Back to gallery", edit_admin_gallery_path(@gallery), class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>