
<%
  if @gallery.persisted?
    form_url = admin_gallery_path(@gallery)
    form_method = :patch
  else
    form_url = admin_galleries_path
    form_method = :post
  end
%>

<%= form_with(model: @gallery, url: form_url, method: form_method, local: true) do |form| %>

  <% if @gallery.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg">
      <h2 class="font-bold"><%= pluralize(@gallery.errors.count, "error") %> prohibited this gallery from being saved:</h2>
      <ul class="list-disc list-inside">
        <% @gallery.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "form-label" %><br>
    <%= form.text_field :title, class: "form-input" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "form-label" %><br>
    <%= form.text_area :description, class: "form-input" %>
  </div>

  <div class="mt-6">
    <%= form.submit "Save Gallery", class: "form-submit" %>
  </div>

<% end %> 