<h1>Manage Galleries</h1>

<%= link_to "Create New Gallery", new_admin_gallery_path, class: "button" %>

<hr>

<div class="admin-gallery-list">
  <% @galleries.each do |gallery| %>
  <div class ="admin-gallery-ite">
    <h3><%= gallery.title %></h3>
    <p><% gallery.description %></p>

    <div class="actions">
      <%= link_to "Add Photos", new_admin_gallery_photo_path(gallery) %> |
      <%= link_to "Edit", edit_admin_gallery_path(gallery) %> |
      <%= link_to "Delete", admin_gallery_path(gallery), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
  <% end %>
</div>